<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Games</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <a href="/view/usergames/create" class="btn btn-success m-3">Create User Game</a>
    <a href="/view/usergamesbiodata" class="btn btn-success m-3">User Games Biodata</a>
    <a href="/view/usergameshistory" class="btn btn-success m-3">User Games History</a>
    <a href="/logout" class="btn btn-success m-3">Logout</a>
    <table class="table">
      <thead>
        <tr>
          <th class="text-center" scope="col">No</th>
          <th class="text-center" scope="col">Username</th>
          <th class="text-center" scope="col">Password</th>
          <th class="text-center" scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach((usergame, index) => { %>
        <tr>
          <th class="text-center" scope="row"><%= index+1 %></th>
          <td class="text-center"><%= usergame.username %></td>
          <td class="text-center"><%= usergame.password %></td>
          <td class="text-center">
            <a href="/view/usergames/edit/<%= usergame.id %>" class="btn btn-warning">Edit</a>
            <a href="/view/usergames/delete/<%= usergame.id %>" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
