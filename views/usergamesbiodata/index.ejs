<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Games Biodata</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <a href="/view/usergamesbiodata/create" class="btn btn-success m-3">Create User Game Biodata</a>
    <a href="/view/usergames" class="btn btn-success m-3">User Games</a>
    <a href="/view/usergameshistory" class="btn btn-success m-3">User Games History</a>
    <a href="/logout" class="btn btn-success m-3">Logout</a>
    <table class="table">
      <thead>
        <tr>
          <th class="text-center" scope="col">No</th>
          <th class="text-center" scope="col">Nama</th>
          <th class="text-center" scope="col">Alamat</th>
          <th class="text-center" scope="col">Email</th>
          <th class="text-center" scope="col">Tanggal Lahir</th>
          <th class="text-center" scope="col">Jenis Kelamin</th>
          <th class="text-center" scope="col">ID User</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach((usergamebiodata, index) => { %>
        <tr>
          <th class="text-center" scope="row"><%= index+1 %></th>
          <td class="text-center"><%= usergamebiodata.nama %></td>
          <td class="text-center"><%= usergamebiodata.alamat %></td>
          <td class="text-center"><%= usergamebiodata.email %></td>
          <td class="text-center"><%= moment(usergamebiodata.ttl).format('Do MMMM, YYYY') %></td>
          <td class="text-center"><%= usergamebiodata.jenis_kelamin %></td>
          <td class="text-center"><%= usergamebiodata.id_user %></td>
          <td class="text-center">
            <a href="/view/usergamesbiodata/edit/<%= usergamebiodata.id %>" class="btn btn-warning">Edit</a>
            <a href="/view/usergamesbiodata/delete/<%= usergamebiodata.id %>" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
